<section></section>
  <div class="container mt-5 ml-5">
<div class="row">
  {{#each products}}
  <div class="col-md-4  p-3">
        <div class="card" style="width: 18rem; hieght:23rem" >
  <img class="card-img-top" src='/product-images/{{this._id}}.jpg' alt="Card image cap">
  <div class="card-body">
    <h5 class="card-title">{{this.name}}</h5>
    <p class="card-text">{{this.price}}</p>
    <a href="#" class="btn btn-primary">{{this.category}}</a>
    <a href="/addtocart/{{this._id}}" class="btn btn-primary">Add to Cart</a>
  </div>
</div>
</div>
{{/each}}
</div>

</div>
</section>

